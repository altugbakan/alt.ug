---
import { getCollection } from "astro:content";
import Post from "../components/Post.astro";

interface Props {
  count: number;
}

const posts = await getCollection("posts");
const { count } = Astro.props;
---

<ul>
  {
    posts
      .sort((post) => post.data.date.getTime())
      .slice(0, count)
      .map((post) => <Post post={post} />)
  }
</ul>
