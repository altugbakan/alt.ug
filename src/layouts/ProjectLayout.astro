---
import BaseLayout from "./BaseLayout.astro";
import TechIcon from "../components/TechIcon.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<style is:global>
  .project > h1 {
    @apply text-4xl font-bold;
  }
  .project > h2 {
    @apply text-2xl font-bold mt-4 mb-2;
  }
  .project p {
    @apply mb-4;
  }
  .project a {
    @apply text-blue-700 dark:text-blue-500 hover:underline;
  }
</style>

<BaseLayout title={project.data.name}>
  <h1 class="text-4xl font-bold mb-4">{project.data.name}</h1>
  <div class="project">
    <slot />
  </div>
  <h2 class="text-2xl font-bold mt-4 mb-2">Technologies</h2>
  <p class="flex flex-row gap-2">
    {project.data.technologies.map((tech) => <TechIcon name={tech} />)}
  </p>
</BaseLayout>
