---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Not Found">
  <h1 class="text-5xl text-bold text-center mt-16">404</h1>
  <p class="text-2xl text-center my-4">This page does not exist.</p>
  <a
    class="flex flex-row justify-center items-center gap-1 mt-4 text-blue-700 dark:text-blue-500 hover:underline mx-auto"
    href="/"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      fill="currentColor"
      class="w-4 h-4"
    >
      <path
        fill-rule="evenodd"
        d="M20.25 12a.75.75 0 01-.75.75H6.31l5.47 5.47a.75.75 0 11-1.06 1.06l-6.75-6.75a.75.75 0 010-1.06l6.75-6.75a.75.75 0 111.06 1.06l-5.47 5.47H19.5a.75.75 0 01.75.75z"
        clip-rule="evenodd"></path>
    </svg>
    <span class="text-center">Go back home</span>
  </a>
</BaseLayout>
