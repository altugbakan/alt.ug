---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
---

<BaseLayout title="AltuÄŸ's Blog">
  <h1 class="text-4xl font-bold text-center mb-6">Latest Posts</h1>
  <ul>
    {
      allPosts
        .sort((post) => post.data.date.getTime())
        .slice(0, 5)
        .map((post) => (
          <li class="mb-4">
            <p class="text-gray-500 text-sm">
              {post.data.date.toLocaleDateString()}
            </p>
            <div class=" flex flex-row items-center gap-4">
              <a href={`/blog/${post.slug}`} class="hover:underline">
                <h3 class="text-xl font-bold">{post.data.title}</h3>
              </a>
              <p class="text-gray-500">{post.data.description}</p>
            </div>
          </li>
        ))
    }
  </ul>
</BaseLayout>
