---
import Post from "../../components/Post.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
---

<BaseLayout title="AltuÄŸ's Blog">
  <h1 class="text-4xl font-bold text-center mb-6">Latest Posts</h1>
  <ul>
    {
      allPosts
        .sort((post) => post.data.date.getTime())
        .slice(0, 5)
        .map((post) => <Post post={post} />)
    }
  </ul>
  <hr class="mt-8 mb-4 h-0.5 border-t-0 bg-slate-50 dark:bg-zinc-600" />
  <h1 class="text-4xl font-bold text-center mb-6">Tags</h1>
  <p class="flex flex-row flex-wrap gap-2">
    {
      allPosts
        .flatMap((post) => post.data.tags)
        .filter((tag, index, self) => self.indexOf(tag) === index)
        .map((tag) => (
          <a href={`/tags/${tag}`} class="text-blue-500 hover:underline">
            {tag}
          </a>
        ))
    }
  </p>
</BaseLayout>
