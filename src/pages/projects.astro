---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon";

import BaseLayout from "../layouts/BaseLayout.astro";

const allBlogPosts = await getCollection("projects");
---

<BaseLayout title="AltuÄŸ's Projects">
  <h1 class="text-center text-4xl font-bold mb-6">Projects</h1>
  {
    allBlogPosts.map((post) => (
      <div class="mb-4">
        <h2 class="text-2xl font-bold mb-2">{post.data.name}</h2>
        <p class="text-gray-500 mb-2">{post.data.description}</p>
        <div class="flex flex-row space-between gap-2">
          <a href={post.data.url} rel="noopener noreferrer" target="_blank">
            <Icon
              name="mdi:globe"
              class="inline-block w-5 h-5 mr-1 hover:scale-110"
            />
          </a>
          <a href={post.data.github} rel="noopener noreferrer" target="_blank">
            <Icon
              name="mdi:github"
              class="inline-block w-5 h-5 mr-1 hover:scale-110"
            />
          </a>
        </div>
      </div>
    ))
  }
</BaseLayout>
